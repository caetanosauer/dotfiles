[user]
	email = csauer@cs.uni-kl.de
	name = Caetano Sauer
[core]
	editor = vim
[merge]
	tool = kdiff3
[alias]
	st = status
        co = checkout
        lg = log --oneline --graph --decorate
        lgall = log --oneline --graph --decorate --all
[branch]
	autosetuprebase = always
[color]
	ui = true
	status = auto
	branch = auto
[push]
	default = current
[init]
	templatedir = ~/.git_template
